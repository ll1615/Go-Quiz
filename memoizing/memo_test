package memo

import (
	"fmt"
	"log"
	"sync"
	"testing" 
	"time"
	"net/http"
	"io/ioutil"
)

var incomingURLs = []string{
	"http://baidu.com",
	"http://qq.com", 
	"http://sina.com",
	"http://youdao.com",
	"http://qq.com",
	"http://youdao.com",
	"http://sina.com",
	"http://baidu.com",
}

func TestMemo(t *testing.T) {
	m := New(httpGetBody)
	var wg sync.WaitGroup 

	for _, url := range incomingURLs {
		wg.Add(1)
		go func(url string) {
			start := time.Now()
			value, err := m.Get(url)
			if err != nil {
				log.Print(err)
			}
			fmt.Printf("%s, %s, %d bytes\n",
				url, time.Since(start), len(value.([]byte)))
			wg.Done()
		}(url)
	}
	wg.Wait()
}


func httpGetBody(url string) (interface{}, error) {
	resp, err := http.Get(url)
	if err != nil {
		return nil, err
	}
	defer resp.Body.Close()
	return ioutil.ReadAll(resp.Body)
}
